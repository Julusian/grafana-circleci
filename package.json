{
  "name": "grafana-gitlab-for-github",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "del dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts --ignore-pattern dist",
    "dev": "yarn ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "@types/pouchdb": "^6.4.0",
    "@types/underscore": "^1.10.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "engines": {
    "node": "^12.16",
    "yarn": "^1.22"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.4.1",
    "axios": "^0.19.2",
    "circleci-api": "^4.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.1.0",
    "p-queue": "^6.4.0",
    "reissue": "^3.0.0",
    "sequelize": "^5.21.9",
    "underscore": "^1.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "yarn lint:fix --"
    ]
  }
}
